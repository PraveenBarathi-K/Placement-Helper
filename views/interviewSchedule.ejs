<!-- interviewSchedule.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interview Schedule</title>
</head>
<body>
    <h1>Interview Schedule</h1>
    <% alumni.forEach(alumnus => { %>
        <h2>Alumni: <%= alumnus.name %></h2>
        <table>
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Date</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                <% interviewSchedule.forEach(interview => {
                    if (interview.alumniId.toString() === alumnus._id.toString()) { %>
                        <tr>
                            <td><%= interview.studentName %></td>
                            <td><%= interview.date %></td>
                            <td><%= interview.time %></td>
                        </tr>
                <%  }
                }); %>
            </tbody>
        </table>
    <% }); %>
</body>
</html>
